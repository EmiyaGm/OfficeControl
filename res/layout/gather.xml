<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/backgather">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="70dp"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备名称"
                android:id="@+id/textView5"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出风口温度"
                android:id="@+id/textView7"
                android:textColor="#000" android:textSize="16dp"
                android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" android:layout_marginLeft="35dp"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView3" android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView7" android:layout_toEndOf="@+id/textView7"
                android:src="@drawable/outtemp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进风口温度"
                android:id="@+id/textView8"
                android:textSize="16dp" android:textColor="#000"
                android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3" android:layout_marginLeft="25dp"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true" android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" android:src="@android:drawable/stat_notify_sdcard_prepare"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView4"
                android:layout_alignParentTop="true" android:layout_toRightOf="@+id/textView8"
                android:layout_toEndOf="@+id/textView8" android:src="@drawable/intemp"/>
    </RelativeLayout>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gatherListView"/>
</LinearLayout>